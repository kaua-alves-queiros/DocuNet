<MudPaper Elevation="4" Class="relative flex-grow-1 h-100" Style="overflow: hidden;">
    <div id="topology-container" style="width: 100%; height: 100%;"></div>

    @if (Loading)
    {
        <div class="absolute d-flex align-center justify-center" style="top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.1); z-index: 50;">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
        </div>
    }
</MudPaper>

@code {
    [Parameter] public bool Loading { get; set; }
}
