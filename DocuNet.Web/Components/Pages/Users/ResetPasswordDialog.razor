@using DocuNet.Web.Dtos.User
@using DocuNet.Web.Services
@inject UserService UserService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Resetar Senha - @Email</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Label="Nova Senha" @bind-Value="_password" InputType="InputType.Password" Required="true" RequiredError="Nova senha é obrigatória." />
        <MudTextField T="string" Label="Confirmação de Senha" @bind-Value="_confirmPassword" InputType="InputType.Password" Required="true" RequiredError="Confirmação é obrigatória." />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Warning" OnClick="Submit" Disabled="@_processing">
            @if (_processing) { <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/> }
            else { <MudText>Resetar</MudText> }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Guid RequesterId { get; set; }
    [Parameter] public string Email { get; set; } = "";

    string _confirmPassword = "";
    string _password = "";
    bool _processing;

    void Cancel() => MudDialog.Cancel();

    async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(_password))
        {
            Snackbar.Add("Digite a nova senha.", Severity.Warning);
            return;
        }

        if (_password != _confirmPassword)
        {
            Snackbar.Add("As senhas não conferem.", Severity.Error);
            return;
        }

        _processing = true;
        var dto = new ChangePasswordDto(RequesterId, Email, null, _password, _confirmPassword);
        var result = await UserService.ChangePasswordAsync(dto);
        _processing = false;

        if (result.Success)
        {
            Snackbar.Add(result.Message, Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }
}
