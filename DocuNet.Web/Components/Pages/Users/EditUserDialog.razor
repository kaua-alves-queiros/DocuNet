@using DocuNet.Web.Services
@inject UserService UserService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Editar Usuário</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Label="E-mail" @bind-Value="Email" Required="true" RequiredError="E-mail é obrigatório." />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@_processing">
            @if (_processing) { <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/> }
            else { <MudText>Salvar</MudText> }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Guid RequesterId { get; set; }
    [Parameter] public Guid UserId { get; set; }
    [Parameter] public string Email { get; set; } = "";

    private bool _processing;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Email))
        {
            Snackbar.Add("E-mail é obrigatório.", Severity.Warning);
            return;
        }

        _processing = true;
        var result = await UserService.UpdateUserEmailAsync(RequesterId, UserId, Email);
        _processing = false;

        if (result.Success)
        {
            Snackbar.Add(result.Message, Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }
}
